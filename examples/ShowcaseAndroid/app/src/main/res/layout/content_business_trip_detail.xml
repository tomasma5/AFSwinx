<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">
    <cz.cvut.fel.matyapav.afandroid.VerticalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/businessTripsLayout"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/businessTripsFormWrapper"
                android:paddingTop="25dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/businessTripsButtonWrapper"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/businessTripsBtnAdd"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent2"
                    android:text="@string/button.perform"/>
                <Button
                    android:id="@+id/businessTripsBtnReset"
                    android:layout_width="100dp"
                    android:background="@color/clear"
                    android:layout_height="wrap_content"
                    android:text="@string/button.reset"/>
            </LinearLayout>

            <Button
                android:id="@+id/businessTripsBtnParts"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/businessTrips.parts"/>

        </LinearLayout>
    </cz.cvut.fel.matyapav.afandroid.VerticalScrollView>
</RelativeLayout>
