<?xml version="1.0" encoding="utf-8"?>
<cz.cvut.fel.matyapav.afandroid.VerticalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/businessTripsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/businessTrips"
            android:textSize="24dp"/>
        <LinearLayout
            android:id="@+id/businessTripsListWrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </LinearLayout>
</cz.cvut.fel.matyapav.afandroid.VerticalScrollView>