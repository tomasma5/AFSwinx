<?xml version="1.0" encoding="utf-8"?>
<cz.cvut.fel.matyapav.afandroid.VerticalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/countriesLayout"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/countriesTable"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/countriesForm"
        android:paddingTop="25dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/countriesButtons"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/countriesBtnAdd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent2"
            android:text="@string/button.perform"/>
        <Button
        android:id="@+id/countriesBtnReset"
        android:layout_width="100dp"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content"
        android:text="@string/button.reset"/>
        <Button
            android:id="@+id/countriesBtnClear"
            android:layout_width="100dp"
            android:background="@color/clear"
            android:layout_height="wrap_content"
            android:text="@string/button.clear"/>
    </LinearLayout>
</LinearLayout>
</cz.cvut.fel.matyapav.afandroid.VerticalScrollView>